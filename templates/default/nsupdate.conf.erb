#
# generated by chef for <%= node['fqdn'] %>
# DO NOT EDIT MANUALLY
#

# the hostname to query via dns
hostname=<%= node['inwx-dns-updater']['hostname'] %>
# dns entry entity ids; see README
entity_id=(<%= node['inwx-dns-updater']['entities'].join(" ") %>)
# your inwx web interface user name and password
username=<%= node['inwx-dns-updater']['username'] %>
password=<%= node['inwx-dns-updater']['password'] %>

<% if node['inwx-dns-updater']['xmlfile'] != nil then %>
# xml template to push to the API
xmlfile=<%= node['inwx-dns-updater']['xmlfile'] %>
<% end %>
<% if node['inwx-dns-updater']['site'] != nil then %>
# path to an ip check web site; has to deliver the wan ip in the response body
site=<%= node['inwx-dns-updater']['site'] %>
<% end %>
